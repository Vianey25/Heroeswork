CREATE DATABASE Heroeswork;

USE Heroeswork;

-- Crear la tabla Empresa
CREATE TABLE Empresa (
    id_empresa INT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(255) NOT NULL,
    direccion VARCHAR(255),
    telefono VARCHAR(15),
    correo_electronico VARCHAR(255),
    descripcion TEXT,
    RFC VARCHAR(20)
);

-- Crear la tabla Escuela
CREATE TABLE Escuela (
    id_escuela INT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(255) NOT NULL,
    direccion VARCHAR(255),
    telefono VARCHAR(15)
);

-- Crear la tabla Candidato
CREATE TABLE Candidato (
    id_candidato INT PRIMARY KEY AUTO_INCREMENT,
    id_escuela INT,
    nombre VARCHAR(255) NOT NULL,
    direccion VARCHAR(255),
    edad INT,
    discapacidad VARCHAR(255),
    habilidades TEXT,
    telefono VARCHAR(15),
    sexo VARCHAR(10),
    correo VARCHAR(255)
);

-- Crear la tabla Vacantes
CREATE TABLE Vacantes (
    id_vacante INT PRIMARY KEY AUTO_INCREMENT,
    id_empresa INT,
    titulo VARCHAR(255) NOT NULL,
    descripcion TEXT,
    tiempo VARCHAR(50),
    sueldo DECIMAL(10, 2),
    requisitos TEXT,
    responsabilidades TEXT
);

-- Crear la tabla Solicitud
CREATE TABLE Solicitud (
    id_solicitud INT PRIMARY KEY AUTO_INCREMENT,
    id_vacante INT,
    id_candidato INT,
    estado VARCHAR(50),
    fecha DATE
);

-- Crear la tabla Test
CREATE TABLE Test (
    id_test INT PRIMARY KEY AUTO_INCREMENT,
    id_solicitud INT,
    id_candidato INT,
    resultados TEXT
);
